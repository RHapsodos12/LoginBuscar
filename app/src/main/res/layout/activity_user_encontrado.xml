<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_encontrado"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Información del usuario"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/txtName333"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Nombre:"
        android:layout_weight="0"
        android:textSize="24sp"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="-32dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nombre"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtUser333"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0"
        android:text="Usuario:"
        android:textAlignment="textEnd"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="-32dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Usuario"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txtPwd333"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Contraseña:"
        android:textAlignment="textEnd"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-32dp"
        android:layout_marginStart="190dp"
        android:text="Contraseña"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:text="Eliminar"
        android:background="@color/deletec"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_delete"/>

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:text="Modificar"
        android:background="@color/edit"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_border" />


</LinearLayout>